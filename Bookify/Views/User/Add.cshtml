@using Microsoft.AspNetCore.Identity
@model AddUserViewModel
@inject RoleManager<IdentityRole> RoleManager
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Users - Add";
    var roles = RoleManager.Roles.ToList();
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Users</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">Users</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
    <section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Add User</h3>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <form asp-controller="User" asp-action="Add" method="post">
                          <div class="row">
                              <div class="col-md-6 form-group">
                                  <label asp-for="DisplayName"></label>
                                  <input asp-for="DisplayName" class="form-control form-control-lg" autocomplete="username" aria-required="true"/>
                                  <span asp-validation-for="DisplayName" class="text-danger"></span>
                              </div>
                              <div class="col-md-6 form-group">
                                  <label asp-for="Email"></label>
                                  <input asp-for="Email" class="form-control form-control-lg" autocomplete="email" aria-required="true"/>
                                  <span asp-validation-for="Email" class="text-danger"></span>
                              </div>
                              <div class="col-md-6 form-group">
                                  <label asp-for="RoleId"></label>
                                  <select class="form-control form-control-lg" asp-for="RoleId">
                                      @foreach (var role in roles)
                                      {
                                          <option value="@role.Id">@role.Name</option>
                                      }
                                  </select>
                                  <span asp-validation-for="RoleId" class="text-danger"></span>
                              </div>
                              <div class="col-md-6 form-group">
                                  <label asp-for="Password"></label>
                                  <input asp-for="Password" class="form-control form-control-lg" aria-required="true" required data-val-required="The Password field is required."/>
                                  <span asp-validation-for="Password" class="text-danger"></span>
                              </div>
                              <div class="col-md-6 form-group">
                                  <label asp-for="ConfirmPassword"></label>
                                  <input asp-for="ConfirmPassword" class="form-control form-control-lg" aria-required="true"/>
                                  <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                              </div>
                              <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Add</button>
                          </div>
                      </form>
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
    </section>
</div>