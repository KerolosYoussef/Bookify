@using System.Security.Claims
@{
    Layout = "_Layout";
    ViewBag.Title = "Checkout";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
@section Styles
{
    <link rel="stylesheet" href="~/css/checkout.css">
}
<div style="background: #fff;height: 100px"></div>
<div class="black-hover"></div>
<div class="container checkout-body d-lg-flex shadow p-3 mb-5 bg-white rounded">
    <div class="box-2">
        <div class="box-inner-2">
            <div>
                <p class="fw-bold">Payment Details</p>
                <p class="dis mb-3">Complete your purchase by providing your payment details</p>
            </div>
            <div id="checkout-errors" class="alert alert-danger" style="display:none"></div>
            <input id="user_id" value="@userId" hidden/>
            <div class="mb-3">
                <p class="dis fw-bold mb-2">First Name</p>
                <input id="firstName" class="form-control" type="text" placeholder="John">
            </div>
            <div class=" my-3">
                <p class="dis fw-bold mb-2">Last Name</p>
                <input id="lastName" class="form-control" type="text" placeholder="Doe">
            </div>
            <div class="mb-3">
                <p class="dis fw-bold mb-2">Email address</p>
                <input id="email" class="form-control" type="email" placeholder="luke@skywalker.com">
            </div>
            <div class=" my-3">
                <p class="dis fw-bold mb-2">Mobile Number</p>
                <input id="mobileNumber" class="form-control" type="text" placeholder="+01234567890">
            </div>
            <div>
                <div class="address">
                    <p class="dis fw-bold mb-3">Billing address</p>
                    <select class="form-select" disabled aria-label="Default select example">
                        <option selected hidden>Egypt</option>
                    </select>
                    <div class="d-flex mb-2">
                        <input id="postalCode" class="form-control zip" type="text" placeholder="Postal Code">
                    </div>
                    <div class="mb-3">
                        <p class="dis fw-bold mb-2">Address</p>
                        <input id="address" class="form-control" type="text">
                    </div>
                    <div class="d-flex flex-column dis">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <p>Subtotal</p>
                            <p id="sub_total"></p>
                            <input id="subTotal" hidden value="33"/>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <p>VAT<span>(14%)</span></p>
                            <p id="tax"></p>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <p class="fw-bold">Total</p>
                            <p class="fw-bold" id="total"></p>
                        </div>
                        <div id="checkout" class="btn btn-primary mt-2">Pay <span id="pay-button" class="ms-1"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script type="module" src="~/js/checkout.js"></script>
}
