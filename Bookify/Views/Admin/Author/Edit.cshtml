@model AddAuthorViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Authors - Edit";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Authors</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Author" asp-action="Index">Author</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Add Author</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form action="~/Admin/Author/Edit" method="post">
                                <input type="hidden" asp-for="Id">
                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <label asp-for="FirstName"></label>
                                        <input asp-for="FirstName" class="form-control form-control-lg" aria-required="true"/>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label asp-for="LastName"></label>
                                        <input asp-for="LastName" class="form-control form-control-lg" aria-required="true"/>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</button>
                                </div>
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>
